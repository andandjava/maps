<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/marker_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round_white"
    android:gravity="center"
    android:orientation="horizontal" >

    <!--
    android:id="@+id/marker_layout"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round1">
    -->


    <!-- <LinearLayout -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical|center_horizontal" >

        <ImageView
            android:id="@+id/marker_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="5dp"
            android:src="@drawable/bhadrachalam_icon1"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/marker_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Basara"
            android:textColor="#0000ff"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/marker_label_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Adilabad"
            android:textColor="#0000ff"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/marker_label_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="Pushkar Ghat"
            android:textColor="#8b0000"
            android:textSize="12dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/marker_label_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:background="#ff0000"
            android:gravity="center"
            android:text="Edit"
            android:textColor="#ffffff"
            android:textSize="14dp" />

        <Button
            android:id="@+id/marker_label_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_rect1"
            android:gravity="center_vertical|center_horizontal"
            android:text="View"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/marker_label_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/rounded_rect1"
            android:gravity="center_vertical|center_horizontal"
            android:text="Send"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>